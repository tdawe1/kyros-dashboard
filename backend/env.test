# Test Environment Configuration for Kyros Dashboard
# Copy this to .env for local testing

# Redis Configuration (optional for demo mode)
REDIS_URL=redis://localhost:6379

# Token and Input Limits
MAX_INPUT_CHARACTERS=100000
MAX_TOKENS_PER_JOB=50000
TOKEN_ESTIMATION_FACTOR=1.3

# User Quotas (generous for testing)
DAILY_JOB_LIMIT=50

# Rate Limiting (generous for testing)
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_BURST=50

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# OpenAI Configuration
API_MODE=demo       # Set to 'real' if you have an OpenAI API key
DEFAULT_MODEL=gpt-4o-mini
# OPENAI_API_KEY=your_openai_api_key_here  # Uncomment and add your key for real API mode

# Sentry Configuration (optional)
# SENTRY_DSN=your_sentry_dsn_here
ENVIRONMENT=testing
RELEASE_VERSION=1.0.0

# Database (SQLite for easy testing)
DATABASE_URL=sqlite:///./kyros.db
