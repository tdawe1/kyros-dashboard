FROM node:18-alpine

# Force CI cache invalidation with a unique build argument
ENV CACHE_BUSTER=20250903-030000

WORKDIR /app

# Copy package files first for better caching
COPY package*.json ./

# Install dependencies (CI fix: prevent phantom lifecycle scripts from running)
RUN npm ci --ignore-scripts --no-audit --no-fund

# Copy application code
COPY . .

# Expose port (updated to match frontend config)
EXPOSE 3001

# Default command
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
