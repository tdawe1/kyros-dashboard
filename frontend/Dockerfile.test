FROM node:18-alpine

# Cache busting using ARG for better flexibility
ARG CACHE_BUSTER=20250101-000000
ENV CACHE_BUSTER=${CACHE_BUSTER}

WORKDIR /app

# Copy package files first for better caching
COPY package*.json ./

# CRITICAL: Install dependencies with --ignore-scripts to prevent prepare script execution
# The CI was still using cached version without this flag - this forces fresh build
RUN npm ci --ignore-scripts --no-audit --no-fund

# Copy application code
COPY . .

# Expose port (updated to match frontend config)
EXPOSE 3001

# Default command
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
